<div class="digg_pagination span9">
  <h1>Story list: </h1>
  <table id="story_list" class="border1">
    <thead>
      <th class="border1">
        Title
      </th>
      <th class="border1">
        Author
      </th>
    </thead>
  <% @stories.each { |story| %>
    <tr>
      <td class="border1"><%= link_to story.title, story_path(story) %></td>
      <td class="border1"><%= link_to story.author.name, user_path(story.author) %></td>
    </tr>
  <% } %>
  </table>  
  <%= will_paginate @stories %>
</div>
